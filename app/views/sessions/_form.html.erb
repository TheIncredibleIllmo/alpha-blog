<div class="container">
  <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-white rounded",local: true) do |f|%>
    <div class="form-group row">
      <%= f.label :email, class: "col-12 col-form-label dark-text" %><br/>
      <div class="col-12">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-12 col-form-label dark-text" %><br/>
      <div class="col-12">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"%>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit "Log in", class: "btn btn-primary"%>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <%= link_to  "Return", root_path, class: "btn btn-outline-info" %>
  </div>
</div>
