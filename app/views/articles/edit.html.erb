<h1>Edit Article:</h1>

<% if @article.errors.any?%>
    <h1>Errors:</h1>
    <ul>
        <%@article.errors.full_messages.each do |m|%>
        <li><%= m %></li>
    <% end %>
    </ul>
<% end %>

<%# it already knows how to form the url %>
<%= form_with(model: @article, local: true) do |f|%> 
    <p>
        <%= f.label :title%><br/>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%><br/>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit%><br/>
    </p>

<% end %>

<%= link_to  "Cancel", articles_path %>