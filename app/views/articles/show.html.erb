<h1 class="text-center mt-4 text-uppercase" Style="letter-spacing:-1px;">Article details</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 m-4">
      <div class="card text-center shadow-lg p-0 mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by Eduardo Medina
        </div>
        <div class="card-body">
          <h5 class="card-title dark-text"><%= @article.title%></h5>
          <p class="card-text text-justify"><%= truncate(@article.description,length: 1000)%></p>
          <%= link_to  "Edit", edit_article_path(@article), class:"btn btn-primary" %>
          <%= link_to  "Delete", article_path(@article),method: :delete, data: {confirm:"Are you sure?"},class:"btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at)%> ago, Edited <%=time_ago_in_words(@article.updated_at)%> ago.</small>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <%= link_to  "Return", articles_path, class:"btn btn-outline-info" %>
</div>
