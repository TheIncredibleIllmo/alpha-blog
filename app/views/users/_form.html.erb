<div class="container">
  <%=render 'shared/error_message', obj: @user%>
  <%= form_with(model: @user, class: "shadow p-3 mb-5 bg-white rounded",local: true) do |f|%>
    <div class="form-group row">
      <%= f.label :username, class: "col-12 col-form-label dark-text" %>
      <div class="col-12">
        <%= f.text_field :username,class: "form-control", placeholder: "Enter a username"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "col-12 col-form-label dark-text" %><br/>
      <div class="col-12">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter your email address"%>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "col-12 col-form-label dark-text" %><br/>
      <div class="col-12">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"%>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary")%>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <%= link_to  "Return", root_path, class: "btn btn-outline-info" %>
  </div>
</div>
